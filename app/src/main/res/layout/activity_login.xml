<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/new2_studmate_bg"
    tools:context=".LoginDashboard.LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="-200dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/bubbles"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/bubbles"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_marginLeft="222dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/bubbles"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="600dp"
            android:layout_height="350dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="-65dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/persondesign" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:id="@+id/border"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Login"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/green"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/login_email"
                android:layout_below="@+id/title"
                android:background="@drawable/border"
                android:layout_marginTop="40dp"
                android:padding="16dp"
                android:hint="Email"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/green"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/login_email"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:id="@+id/passwordText"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/login_password"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:hint="Password"
                    android:background="@drawable/password_bg"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/green"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/password_toggle"
                    android:padding="8dp"
                    android:src="@drawable/baseline_visibility_off_24"
                    android:contentDescription="Toggle password visibility"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/button"
                android:clickable="true"
                android:background="@drawable/button_background_ripple"
                android:layout_below="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:id="@+id/button_text"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_light"
                    android:textStyle="bold"
                    android:letterSpacing=".2"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/button_animation"
                    app:lottie_rawRes="@raw/button_loading_white"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"
                    android:layout_width="50dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_height="50dp"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/button"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:padding="1dp"
                android:text="Forgot Password"
                android:textColor="@color/light_gray"
                android:textSize="14sp"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgotPassword"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:buttonSize="wide"
                app:colorScheme="dark" />

            <TextView
                android:id="@+id/txtSignUp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/googleBtn"
                android:padding="1dp"
                android:text="Not yet registered? Sign Up"
                android:textColor="@color/green"
                android:textSize="18sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
