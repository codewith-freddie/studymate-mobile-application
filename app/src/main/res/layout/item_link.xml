<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_more_vert_24"
            app:tint="@color/dark_grey" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@id/recImage">

            <!-- Background Circle -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_bg"
                android:backgroundTint="@color/light_gray"
                android:layout_gravity="center" />

            <!-- Centered Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_link_24"
                android:tint="@color/cream_white"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        </FrameLayout>

        <TextView
            android:id="@+id/linkTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImage"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linkTitle"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@id/recImage"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text="date and time"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateTime"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Instruction: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:maxLines="1"/>

        <!-- Announcement Text (Body) -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_marginTop="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="20dp"
            android:text="Instructions details go here..."
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:maxLines="3"
            android:ellipsize="end"
            android:justificationMode="inter_word" />

        <TextView
            android:id="@+id/linkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructionText"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Link: "
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:maxLines="1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/urlText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructionText"
            android:layout_toRightOf="@+id/linkText"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:text=""
            android:textColor="@color/sky_blue"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

            <!-- Expand/Collapse Text ("More"/"Less") -->
            <TextView
                android:id="@+id/expandTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/urlText"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="More"
                android:textColor="@color/light_gray"
                android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
