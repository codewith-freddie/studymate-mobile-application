<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:elevation="24dp">

    <!-- Quiz Details Card (larger width) -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:id="@+id/viewDetails"
        android:layout_margin="4dp"
        app:cardCornerRadius="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:padding="16dp">

            <TextView
                android:id="@+id/quizTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Quiz Title"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/time"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/icon_timer"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/quizTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/light_gray"
                    tools:text="Time Duration"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/quizDateTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quizTitleText"
                android:layout_marginTop="4dp"
                android:textColor="@color/light_gray"
                tools:text="Date and Time"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Leaderboard Card (smaller width) -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/leaderboardView"
        android:layout_weight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_leaderboard"
                android:layout_marginTop="25dp"
                android:scaleType="center"
                app:tint="@color/green"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leaderboard"
                android:textSize="10sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
