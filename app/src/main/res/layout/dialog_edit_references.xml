<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="30dp"
    android:background="@color/cream_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Edit References"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:id="@+id/titleTextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_above="@id/textFormatTitle"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/referencesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/textEx"
        android:text="Format: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:id="@+id/textFormatTitle"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/textFormatTitle"
        android:layout_alignBaseline="@id/textFormatTitle"
        android:text="Author lastname, Year, Title, Url"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:id="@+id/textFormat"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonLayout"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="@string/example_text"
        android:textStyle="italic"
        android:textSize="14sp"
        android:justificationMode="inter_word"
        android:textColor="@color/light_gray"
        android:visibility="visible"/>

    <!-- Buttons layout at the bottom -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Cancel Button as TextView -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/border_rectangle_filled"
            android:text="Cancel"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/cancelReferencesButton"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:clickable="true"
            android:layout_marginEnd="10dp"
            app:cornerRadius="12dp"/>

        <!-- Update Button -->
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/border_rectangle"
            android:text="Update"
            android:textAllCaps="false"
            android:id="@+id/updateReferencesButton"
            android:textSize="20sp"
            app:cornerRadius="12dp" />
    </LinearLayout>

</RelativeLayout>
