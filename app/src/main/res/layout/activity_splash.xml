<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/studymate_bg"
    android:layout_gravity="center"
    style="@style/AppTheme">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="141dp"
        android:layout_height="108dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/lottieAnimationView"
        android:src="@drawable/logo_wo_bg"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:paddingRight="40dp"
        android:layout_width="389dp"
        android:layout_height="88dp"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/stud_logo_anim" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottieAnimationView"
        android:text="Built to Succeed"
        android:textSize="16sp"
        android:textColor="@color/cream_white"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold|italic"/>

</RelativeLayout>
